<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <style name="AppTheme.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:drawable">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.ImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:tint">?colorAccent</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

</resources>
